{% extends 'base.html.twig' %}

{% block body %}

<table class="table table-dark table-striped">
  <thead>
    <tr>
      <th scope="col">Photo</th>
      <th scope="col">Titre</th>
      <th scope="col">Categorie</th>
      <th scope="col">Description</th>
      <th scope="col">Couleur</th>
      <th scope="col">Prix</th>
      <th scope="col">Stock</th>
      <th scope="col">Reference</th>
      <th scope="col" colspan="2">Modification</th>
    </tr>
  </thead>
  <tbody>
    {% for produit in listeProduit %}
    <tr>
      <td><img src="../img/{{ produit.photo}}" alt="photo"</th>
      <td>{{ produit.titre }}</td>
      <td>{{ produit.categorie}}</td>
      <td>{{ produit.description}}</td>
      <td>{{ produit.couleur }}</td>
      <td>{{ produit.prix }}</td>
      <td>{{ produit.stock}}</td>
      <td>{{ produit.reference}}</td>
      <td><a href="{{ path("produit_supprimer", {id: produit.id}) }}" class="supp" onclick="return confirm('Êtes-vous sûr de vouloir supprimer ?')"><i class='fa fa-trash'></i></a></td>
      <td><a href='{{ path("produit_modifier", {id: produit.id}) }}'><i class='fa fa-pen'></i></a></td>
    </tr>
    {% endfor %}
  </tbody>
</table>

{% endblock %}